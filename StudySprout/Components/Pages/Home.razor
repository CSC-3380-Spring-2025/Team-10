@page "/"

<PageTitle>Home</PageTitle>

@* Navigation Buttons *@
<header>
    <div class="logo">
        <img class="logo" src="/favicon.png" alt="Study Sprout Logo" />
        <nav>
            @*<a href="/MyGarden">MY GARDEN</a>*@
            <a href="/MyStudySets">MY STUDY SETS</a>
            <a href="/CreateNew"class="active">CREATE NEW SET</a>
        </nav>
    </div>

    <div class="auth-links">
        <a href="/signup">Sign up</a>
        <a href="/signin" class="GoToLogIn">Log in</a>
    </div>
</header>

<div class="large-image-container">
    <img src="/Images/sproutsImageNoText.jpeg" alt="Sprouts Image" class="large-image" />
    <div class="large-image-content">
        <p class="large-image-text">GROW WITH STUDY SPROUT</p>
        <button class="get-started-button" @onclick="NavigatetoSignUp">GET STARTED</button>
    </div>
</div>

<div class="small-images-container">
    <div class="small-image-item">
        <img src="/Images/featureOne.png" alt="Feature One" class="small-image" style="width: 20%; max-height: 350px;" />
        <button class="feature-button">SPACED REPETITION</button>
        <p class="small-image-text">Study efficiently! We use spaced repetition for better recall over time.</p>
    </div>
    <div class="small-image-item">
        <img src="/Images/featureTwo.png" alt="Feature Two" class="small-image" style="width: 35%; max-height: 300px;" />
        <button class="feature-button">UNIQUE GARDENS</button>
        <p class="small-image-text">Nurture knowledge, watch your own garden thrive!</p>
    </div>
    <div class="small-image-item">
        <img src="/Images/featureThree.png" alt="Feature Three" class="small-image" style="width: 28%; max-height: 250px;" />
        <button class="feature-button">TOTALLY FREE</button>
        <p class="small-image-text">No cost, no catch - just smarter studying with Study Sprout.</p>
    </div>
</div>

<style>
    :host {
        display: block;
    }

    .navbar {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 1rem;
        background-color: #f8f8f8;
    }

    .nav-logo {
        height: 50px;
    }

    .sign-up, .log-in, .my-garden, .my-study-sets, .create-new {
        font-size: 18px;
        font-family: Arial, sans-serif;
        font-weight: bold;
        margin: 0 5px;
        padding: 10px 15px;
        border: none;
        cursor: pointer;
    }

    
    .large-image-container {
        position: relative; /* Ensure the content is positioned relative to this container */
        text-align: center;
        margin-top: -290px;
        display: flex;
        justify-content: center;
        align-items: center;
        height: auto;
        overflow: hidden;
    }

    .large-image {
        width: 100%;
        height: auto;
        object-fit: cover; /* Ensure the image fills the container without distortion */
    }

    .large-image-content {
        position: absolute; /* Position the content over the image */
        top: 50%; /* Center vertically */
        left: 50%; /* Center horizontally */
        transform: translate(-50%, -50%); /* Adjust for perfect centering */
        display: flex;
        flex-direction: column; /* Stack text and button vertically */
        align-items: center; /* Center items horizontally */
        gap: 20px; /* Add spacing between the text and the button */
    }

    .large-image-text {
        font-size: 75px;
        font-family: Arial, sans-serif;
        color: #ffffff;
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.7);
        margin: 0; /* Remove default margin */
    }

    .get-started-button {
        font-size: 40px;
        font-family: Arial, sans-serif;
        font-weight: bold;
        color: #ffffff;
        background-color: #177a13;
        border: none;
        border-radius: 5px;
        padding: 10px 20px;
        cursor: pointer;
        text-transform: uppercase;
        box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.2); /* Add a subtle shadow */
        transition: background-color 0.3s ease; /* Smooth hover effect */
    }

    .get-started-button:hover {
        background-color: #11660e; /* Darker green on hover */
    }

    .small-images-container {
    display: flex;
    justify-content: center;
    align-items: flex-start; /* Align all items to the top */
    gap: 30px;
    margin-top: 40px;
}

.small-image-item {
    display: flex;
    flex-direction: column; /* Stack the image, button, and text vertically */
    align-items: center; /* Center the text, button, and image horizontally */
    text-align: center; /* Center the text */
    height: 500px; /* Set a fixed height for all containers */
}

.small-image {
    width: 30%;
    height: auto;
    max-height: 400px;
    object-fit: contain;
}

.feature-button {
    margin-top: 10px; /* Add space between the image and the button */
    font-size: 40px;
    font-family: Arial, sans-serif;
    font-weight: bold;
    color: #ffffff;
    background-color: #177a13;
    border: none;
    border-radius: 5px;
    padding: 8px 16px;
    cursor: pointer;
    text-transform: uppercase;
    box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.2); /* Add a subtle shadow */
}

.small-image-text {
    margin-top: 10px; /* Add space between the button and the text */
    font-size: 40px; /* Adjust font size */
    font-family: Arial, sans-serif; /* Set font family */
    color: #333; /* Set text color */
    max-width: 90%; /* Limit the width of the text to prevent it from stretching */
    word-wrap: break-word; /* Ensure long words break to the next line */
}

header {
    display: flex;
    justify-content: space-between; /* Space out the logo and links */
    align-items: center; /* Align items vertically */
    padding: 10px 20px; /* Add padding inside the header */
    background-color: #ffffff; /* White background */
    width: 100%; /* Ensure the header spans the full width */
    box-sizing: border-box; /* Include padding and border in width/height */
}

.logo img {
    height: 50px; /* Set the height of the logo */
    width: auto; /* Maintain aspect ratio */
}

header nav {
    display: flex;
    gap: 49px; /* Space between navigation links */
}

header nav a {
    text-decoration: none; /* Remove underline */
    color: #4e7429; /* Green text color */
    font-weight: bold; /* Bold text */
    font-size: 1rem; /* Font size */
}

header nav a:hover {
    text-decoration: underline; /* Underline on hover */
}

.auth-links a {
    text-decoration: none; /* Remove underline */
    font-weight: bold; /* Bold text */
    font-size: 1rem; /* Font size */
    color: #4e7429; /* Green text color */
    padding: 5px 15px; /* Add padding around the link */
    border: 1px solid #4e7429; /* Add a green border */
    border-radius: 5px; /* Rounded corners */
}

.auth-links a:hover {
    background-color: #4e7429; /* Green background on hover */
    color: white; /* White text on hover */
}
    
</style>

@code {
    @inject NavigationManager Navigation;

    private void NavigatetoSignUp()
    {
        Navigation.NavigateTo("/signup", forceLoad: true);
    }

    private void NavigateToSignIn()
    {
        Navigation.NavigateTo("/signin", forceLoad: true);
    }

    private void NavigateToMyGarden()
    {
        Navigation.NavigateTo("/mygarden", forceLoad: true);
    }

    private void NavigateToStudySets()
    {
        Navigation.NavigateTo("/mystudysets", forceLoad: true);
    }

    private void NavigateToCreatNew()
    {
        Navigation.NavigateTo("/createnew", forceLoad: true);
    }
}