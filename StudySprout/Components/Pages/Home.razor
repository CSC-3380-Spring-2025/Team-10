@page "/"

<PageTitle>Home</PageTitle>

@* Navigation Buttons *@
<nav class="navbar"> 
    <img class="nav-logo" src="/Pictures/StudySprout.png" alt="Study Sprout Logo" />
    <button @onclick="NavigatetoSignUp" class="sign-up">Sign Up</button>
    <button @onclick="NavigateToSignIn" class="log-in">Log In</button>
    <button @onclick="NavigateToMyGarden" class="my-garden">MY GARDEN</button>
    <button @onclick="NavigateToStudySets" class="my-study-sets">MY STUDY SETS</button>
    <button @onclick="NavigateToCreatNew" class="create-new">CREATE NEW</button>
</nav>

@* Large Image at the Top *@
<div class="large-image-container">
    <img src="/Images/sproutsImage1.png" alt="Sprouts Image" class="large-image" />
</div>

@* Three Smaller Images Below *@
<div class="small-images-container">
    <img src="/Images/featureOne.png" alt="Feature One" class="small-image" />
    <img src="/Images/featureTwo.png" alt="Feature Two" class="small-image" />
    <img src="/Images/featureThree.png" alt="Feature Three" class="small-image" />
</div>

<style>
    :host {
        display: block;
    }

    .navbar {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 1rem;
        background-color: #f8f8f8;
    }

    .nav-logo {
        height: 50px;
    }

    .sign-up, .log-in, .my-garden, .my-study-sets, .create-new {
        font-size: 18px;
        font-family: Arial, sans-serif;
        font-weight: bold;
        margin: 0 5px;
        padding: 10px 15px;
        border: none;
        cursor: pointer;
    }

    .large-image-container {
        text-align: center;
        margin-top: 20px;
        display: flex;
        justify-content: center; /* Center horizontally */
        align-items: center; /* Center vertically */
        height: 1000px; /* Set a fixed height for the container */
        overflow: hidden; /* Hide overflow if the image exceeds the container */
    }

    .large-image {
        width: 100%; /* Full width of the container */
        height: auto; /* Maintain aspect ratio */
        object-fit: contain; /* Ensure the entire image is visible */
    }

    .small-images-container {
        display: flex;
        justify-content: center; /* Center the images horizontally */
        gap: 30px; /* Adjust the spacing between the images */
        margin-top: 40px; /* Add space above the images */
    }

    .small-image {
        width: 30%; /* Adjust the width of each image */
        height: auto; /* Maintain aspect ratio */
        max-height: 400px; /* Set a maximum height */
        object-fit: contain; /* Ensure the entire image is visible */
    }
</style>

@code {
    @inject NavigationManager Navigation;

    private void NavigatetoSignUp()
    {
        Navigation.NavigateTo("/signup", forceLoad: true);
    }

    private void NavigateToSignIn()
    {
        Navigation.NavigateTo("/signin", forceLoad: true);
    }

    private void NavigateToMyGarden()
    {
        Navigation.NavigateTo("/mygarden", forceLoad: true);
    }

    private void NavigateToStudySets()
    {
        Navigation.NavigateTo("/mystudysets", forceLoad: true);
    }

    private void NavigateToCreatNew()
    {
        Navigation.NavigateTo("/createnew", forceLoad: true);
    }
}