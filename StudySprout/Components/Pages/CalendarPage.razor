body {
  font-family: 'Segoe UI', sans-serif;
  background-color: #222;
  margin: 0;
  padding: 2rem;
}

.calendar-wrapper {
  background: white;
  border-radius: 30px;
  max-width: 1000px;
  margin: auto;
  padding: 2rem;
  border: 15px solid #9acd8f;
}

header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 1rem;
}

h1 {
  font-size: 2rem;
  color: #3a7c3f;
}

h1 span {
  color: #888;
  font-weight: normal;
}

.logo {
  font-weight: bold;
  font-size: 1.5rem;
  color: #3a7c3f;
}

.dropdown select {
  padding: 0.5rem;
  border-radius: 5px;
}

.calendar {
  display: flex;
  flex-direction: column;
}

.day-labels, .days {
  display: grid;
  grid-template-columns: repeat(7, 1fr);
  gap: 10px;
  text-align: center;
}

.day-labels div {
  font-weight: bold;
  color: #555;
}

.day {
  border: 1px solid #ddd;
  min-height: 100px;
  position: relative;
  padding: 5px;
  text-align: left;
  font-size: 0.9rem;
  border-radius: 8px;
  background: #fdfdfd;
}

.blank {
  background: none;
  border: none;
}

.event {
  display: block;
  margin: 4px 0;
  padding: 3px 6px;
  border-radius: 5px;
  font-size: 0.75rem;
  color: #fff;
}

.orange {
  background: #f3d6a4;
  color: #754c00;
}

.red {
  background: #f4c4c4;
  color: #a10000;
}

.blue {
  background: #cce5ff;
  color: #004085;
}

